<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tustar.fc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.BookProvider"
            android:authorities="com.tustar.fc.provider"
            android:exported="true" />

        <!--Chapter 02-->
        <activity
            android:name=".chapter02.Chapter02MainActivity"
            android:label="@string/title_activity_chapter02_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chapter02.Chapter02NormalActivity"
            android:label="@string/title_activity_chapter02_normal"></activity>
        <activity
            android:name=".chapter02.Chapter02DialogActivity"
            android:label="@string/title_activity_chapter02_dialog"
            android:theme="@android:style/Theme.Dialog"></activity>

    </application>

</manifest>
